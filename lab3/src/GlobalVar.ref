*$FROM src/ConstExpr.ref
*$FROM src/Init.ref
$EXTERN ConstExpr, Init;

/**
  <GlobalVar t.Names (var s.Name t.ConstExpr e.Init?)> == s.AsmCodeCmd*
*/
$ENTRY GlobalVar {
  t.Names (var s.Name t.ConstExpr) = <GlobalVar t.Names (var s.Name t.ConstExpr "=")>;
  t.Names (var s.Name t.ConstExpr e.Init)
    , <ConstExpr t.Names t.ConstExpr> : s.Size
    = t.Names ':_' s.Name '\n' <Init t.Names s.Size e.Init> '\n';
}
